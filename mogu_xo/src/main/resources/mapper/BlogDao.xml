<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moxi.mogublog.xo.dao.BlogDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns">`oid`, `title`, `summary`, `content`, `taguid`, `clickcount`, `collectcount`, `photo`, `status` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">blog</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="basecolumns"/>, <include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{oid},#{title},#{summary},#{content},#{taguid},#{clickcount},#{collectcount},#{photo},#{status}</sql>
    <sql id="setoid">`oid` = #{oid}</sql>
    <sql id="settitle">`title` = #{title}</sql>
    <sql id="setsummary">`summary` = #{summary}</sql>
    <sql id="setcontent">`content` = #{content}</sql>
    <sql id="settaguid">`taguid` = #{taguid}</sql>
    <sql id="setclickcount">`clickcount` = #{clickcount}</sql>
    <sql id="setcollectcount">`collectcount` = #{collectcount}</sql>
    <sql id="setphoto">`photo` = #{photo}</sql>
    <sql id="setstatus">`status` = #{status}</sql>
    <sql id="setcustomstatus">`status` in (#{customstatus})</sql>
    <sql id="setkeyword">title like CONCAT('%',#{keyword},'%') or summary like CONCAT('%',#{keyword},'%')</sql>
    <sql id="allsets">set
            <include refid="setoid"/>,
            <include refid="settitle"/>,
            <include refid="setsummary"/>,
            <include refid="setcontent"/>,
            <include refid="settaguid"/>,
            <include refid="setclickcount"/>,
            <include refid="setcollectcount"/>,
            <include refid="setphoto"/>,
            <include refid="setstatus"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="com.moxi.mogublog.xo.dao.Blog">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="com.moxi.mogublog.xo.dao.Blog">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="oid != null">
                and <include refid="setoid"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="summary != null">
                and <include refid="setsummary"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="taguid != null">
                and <include refid="settaguid"/>
            </if>
            <if test="clickcount != null">
                and <include refid="setclickcount"/>
            </if>
            <if test="collectcount != null">
                and <include refid="setcollectcount"/>
            </if>
            <if test="photo != null">
                and <include refid="setphoto"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="oid != null">
                and <include refid="setoid"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="summary != null">
                and <include refid="setsummary"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="taguid != null">
                and <include refid="settaguid"/>
            </if>
            <if test="clickcount != null">
                and <include refid="setclickcount"/>
            </if>
            <if test="collectcount != null">
                and <include refid="setcollectcount"/>
            </if>
            <if test="photo != null">
                and <include refid="setphoto"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
            <if test="customstatus != null">
               and <include refid="setcustomstatus"/>
            </if>
            <if test="keyword != null">
				and
				<include refid="setkeyword" />
			</if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="com.moxi.mogublog.xo.dao.Blog">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="oid != null">
                and <include refid="setoid"/>
            </if>
            <if test="title != null">
                and <include refid="settitle"/>
            </if>
            <if test="summary != null">
                and <include refid="setsummary"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="taguid != null">
                and <include refid="settaguid"/>
            </if>
            <if test="clickcount != null">
                and <include refid="setclickcount"/>
            </if>
            <if test="collectcount != null">
                and <include refid="setcollectcount"/>
            </if>
            <if test="photo != null">
                and <include refid="setphoto"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
            <if test="customstatus != null">
               and <include refid="setcustomstatus"/>
            </if>
            <if test="keyword != null">
				and
				<include refid="setkeyword" />
			</if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="com.moxi.mogublog.xo.dao.Blog">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="com.moxi.mogublog.xo.dao.Blog">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="oid != null">
                <include refid="setoid"/>,
            </if>
            <if test="title != null">
                <include refid="settitle"/>,
            </if>
            <if test="summary != null">
                <include refid="setsummary"/>,
            </if>
            <if test="content != null">
                <include refid="setcontent"/>,
            </if>
            <if test="taguid != null">
                <include refid="settaguid"/>,
            </if>
            <if test="clickcount != null">
                <include refid="setclickcount"/>,
            </if>
            <if test="collectcount != null">
                <include refid="setcollectcount"/>,
            </if>
            <if test="photo != null">
                <include refid="setphoto"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

